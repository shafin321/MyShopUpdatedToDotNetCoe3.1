@model IEnumerable<MyShop.Core.Models.Product>

@{
    ViewBag.Title = "Home Page";
}
<h1>Products</h1>

@foreach (var item in Model)
{
    <div class="col-md-4" style="height:400px; padding:10px; margin:10px; border: solid thin whitesmoke">
        <div class="col-md-12">
            <img style="height:250px" src="~/Content/images/@item.Image" />

        </div>
        <div class="col-md-12">
            <strong>@Html.ActionLink(item.Name, "Details", new { id = item.Id })</strong>


        </div>

        <div class="col-md-12">
            @item.Description
        </div>

        <div class="col-md-12">
            @item.Price
        </div>

        <div class="col-md-12">
            <a href="@Url.Action("AddToBasket","Basket",new {id=item.Id})" class="btn btn-default">Add to Basket</a>
        </div>

    </div>
}
<div class="col-md-12 clearfix" />